{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "g++ - Build and debug active file",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/main", // Path to the executable
        "args": [], // Arguments to pass to the program (if any)
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "lldb", // Use "lldb" for macOS, "gdb" for Linux, or "cppvsdbg" for Windows
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ]
      }
    ]
  }
  